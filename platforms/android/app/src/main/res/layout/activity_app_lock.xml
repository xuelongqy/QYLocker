<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/al_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--主干区域-->
    <FrameLayout
        android:id="@+id/al_content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
        <!--Cordova浏览器视图-->
        <org.apache.cordova.engine.SystemWebView
            android:id="@+id/al_web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <!--侧边栏-->
    <LinearLayout
        android:id="@+id/al_left_drawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_gravity="start">
        <!--头部应用信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:gravity="center_vertical"
            android:background="@color/colorPrimaryDark">
            <ImageView
                android:id="@+id/al_app_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/al_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
        <!--密码列表-->
        <ListView
            android:id="@+id/al_pwd_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:choiceMode="singleChoice"
            android:divider="#33333333"
            android:dividerHeight="0dp"
            android:background="#00000000"/>
        <!--底部页面信息-->
        <LinearLayout
            android:id="@+id/al_page_info"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#fafafa">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical">
                <!--包名-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center|left">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textColor="@android:color/black"
                        android:text="@string/package_label"/>
                    <TextView
                        android:id="@+id/al_pkg_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"/>
                </LinearLayout>
                <!--页面-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center|left">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textColor="@android:color/black"
                        android:text="@string/activity_label"/>
                    <TextView
                        android:id="@+id/al_act_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"/>
                </LinearLayout>
            </LinearLayout>
            <Switch
                android:id="@+id/al_filter_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:checked="false"
                android:text="@string/filter" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
